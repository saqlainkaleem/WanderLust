<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
	<div class="col-8 offset-2">
		<h3>Edit your listing</h3>
		<form method="post" action="/listings/<%= listingData._id %>?_method=PUT">
			<div class="mb-3">
				<label for="title" class="form-label">Title</label>
				<input
					type="text"
					name="listing[title]"
					value="<%=listingData.title%>"
					class="form-control"
				/>
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea name="listing[description]" class="form-control">
<%= listingData.description %></textarea
				>
			</div>
			<div class="mb-3">
				<label for="image" class="form-label">Image Link</label>
				<input
					type="text"
					name="listing[image]"
					value="<%= listingData.image %>"
					class="form-control"
				/>
			</div>
			<div class="row">
				<div class="mb-3 col-md-4">
					<label for="price" class="form-label">Price</label>
					<input
						type="number"
						name="listing[price]"
						value="<%= listingData.price %>"
						class="form-control"
					/>
				</div>
				<div class="mb-3 col-md-8">
					<label for="country" class="form-label">Country</label>
					<input
						type="text"
						name="listing[country]"
						value="<%= listingData.country %>"
						class="form-control"
					/>
				</div>
			</div>

			<div class="mb-3">
				<label for="location" class="form-label">Location</label>
				<input
					type="text"
					name="listing[location]"
					value="<%= listingData.location %>"
					class="form-control"
				/>
			</div>

			<button class="btn btn-dark edit-btn mt-3">Edit Listing</button>
		</form>
	</div>
</div>
