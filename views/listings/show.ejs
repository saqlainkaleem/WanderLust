<% layout("/layouts/boilerplate") %>
<div class="row">
	<div class="col-8 offset-3">
		<h3><%= listingData.title %></h3>
	</div>
	<div class="card col-6 offset-3 show-card">
		<img src="<%= listingData.image %>" class="show-img" alt="Listing image" />
		<div class="card-body">
			<p class="card-text">
				<br />
				<%= listingData.description %> <br />
				&#8377;<%= listingData.price.toLocaleString("en-IN") %> <br />
				<%= listingData.location %> <br />
				<%= listingData.country %>
			</p>
		</div>
	</div>
	<div class="btns">
		<a
			href="/listings/<%= listingData._id %>/edit"
			class="btn btn-dark col-1 offset-3 edit-btn"
			>Edit</a
		>
		<form
			action="/listings/<%= listingData._id %>?_method=DELETE"
			method="post"
		>
			<button class="btn btn-dark offset-5">DELETE</button>
		</form>
	</div>
</div>
